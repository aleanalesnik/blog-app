extends layout

block content
	.container
		.profile-mainpic
			img.profile-mainpic(src='../images/marblepineapple1.jpg', alt='marble', width='100%', height='100%')
		#IntroText
			h1 Hi, #{user.firstname}!
		.profile-info
			h2 Profile
			.profile-image
				img(src= `${user.profilePicture}` style='width:50%;height:50%;border-radius:50%')
			h3 Name
			h6 #{user.firstname} #{user.lastname}
			h3 Username
			h6 @#{user.username}
			h3 Email
			h6 #{user.email}
		.user-blogposts
			h2 Recent Posts
			each blogpost in userposts
				.user-posts
					.blogtitle2
						| #{blogpost.title}
					.blogbody2
						p #{blogpost.body}
					.createdAt
						p #{blogpost.createdAt}
	script.
		$(document).ready(function() {
		$("#IntroText").hide().fadeIn(4000);
		});