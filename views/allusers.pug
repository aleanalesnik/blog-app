extends layout

block content
	.marble
		img(src="../images/marblepineapple1.jpg" alt="marble")
		.marbletext Our Users
	each user in userResults
		.allposts2
			.user-firstname
				h2 #{user.firstname}
			.user-pic
				img(src=`${user.profilePicture}`)
			.user-info
				h6 Username
				| #{user.username}
			br
			.user-profile
				a(href='/allusers/'+user.id) Profile