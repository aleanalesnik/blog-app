extends layout

block content
	.container
		.profile-mainpic
			img.profile-mainpic(src='../images/marblepineapple1.jpg', alt='marble', width='100%', height='100%')
		#IntroText
			h1 Hi, #{firstname}!
		.box-profile
		.heading-profile
			h3 Profile
		.prof-pic
			img(src= `${profilePicture}` style='width:100%;height:100%')
		.profile-description
			p Name: #{firstname} #{lastname}
			p Username: @#{username}
			p Email: #{email}

	script.
		$(document).ready(function() {
		$("#IntroText").hide().fadeIn(4000);
		});